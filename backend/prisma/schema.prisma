// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int @id @default(autoincrement())
  email           String @unique
  password        String
  cryptoMonitored CryptoMonitored[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CryptoMonitored {
  id          Int @id @default(autoincrement())
  cryptoId    String
  name        String
  symbol      String
  alias       String
  targetPrice Float
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  tags        TagsOfCryptoMonitored[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id          Int @id @default(autoincrement())
  name        String @unique
  cryptos     TagsOfCryptoMonitored[]
  createdAt   DateTime @default(now())
}

model TagsOfCryptoMonitored {
  id          Int @id @default(autoincrement())
  tag         Tag @relation(fields: [tagId], references: [id])
  tagId       Int
  crypto      CryptoMonitored @relation(fields: [cryptoId], references: [id])
  cryptoId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}