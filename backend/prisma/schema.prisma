// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int @id @default(autoincrement())
  email           String @unique
  password        String
  coinMonitored   CoinMonitored[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CoinMonitored {
  id          Int @id @default(autoincrement())
  coinId      String
  name        String
  symbol      String
  alias       String
  targetPrice Float
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  tags        TagsOfCoinMonitored[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id          Int @id @default(autoincrement())
  name        String @unique
  coins       TagsOfCoinMonitored[]
  createdAt   DateTime @default(now())
}

model TagsOfCoinMonitored {
  id          Int @id @default(autoincrement())
  tag         Tag @relation(fields: [tagId], references: [id])
  tagId       Int
  coinMonitored CoinMonitored @relation(fields: [coinId], references: [id])
  coinId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}